<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Logs</title>
    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
  </head>

  <body>

    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-12 main">
          <h1 class="page-header"><%=title%></h1>
          <div><%=moment().format('MMMM Do YYYY, h:mm:ss a'); %></div>
          <table class="table table-striped table-hover table-condensed ">
              <thead>
                <tr>
                  <th class="col-sm-2">When</th>
                  <th class="col-sm-1">Method</th>
                  <th class="col-sm-1">Path</th>
                  <th class="col-sm-4">Data</th>
                </tr>
              </thead>
              <tbody>
                
                <% entries.forEach(function(entry){%>
                  <tr>
                    <td><%=entry.date ? moment(entry.date).fromNow()+' : '+moment(entry.date).format() : 'N/A'%></td>
                    <td><%=entry.method%></td>
                    <td><%=entry.path%></td>
                    <td><%=JSON.stringify(entry.data);%></td>
                  </tr>
                <%})%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
